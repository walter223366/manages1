<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.ral.manages.mapper.app.IKongFuMapper">

    <sql id="kongFuResult">
        kongfu_id,name,info,type,experience_limit,kongfu_attainments,enable,deleteStatus,kongfu_zhaoshi
    </sql>
    <sql id="conditionalCheck">
        <if test="name != null and name != ''">
            AND name like '%${name}%'
        </if>
        <if test="type != null and type != ''">
            AND type=#{type}
        </if>
        <if test="kongfu_attainments != null and kongfu_attainments != ''">
            AND kongfu_attainments=#{attainments}
        </if>
        <if test="enable != null and enable != ''">
            AND enable=#{enable}
        </if>
    </sql>


    <!--查询-->
    <select id="kongFuPagingQuery" parameterType="map" resultType="map">
        SELECT <include refid="kongFuResult"/> FROM dict_kongfu WHERE 1=1 <include refid="conditionalCheck"/> AND (deleteStatus IS NULL OR deleteStatus=0)
    </select>
    <select id="kongFuIsExist" parameterType="com.ral.manages.entity.app.KongFu" resultType="int">
        SELECT COUNT(1) FROM dict_kongfu WHERE 1=1 AND name=#{kongFu.name}
    </select>
    <select id="kongFuEditQuery" parameterType="com.ral.manages.entity.app.KongFu" resultType="map">
        SELECT <include refid="kongFuResult"/> FROM dict_kongfu WHERE 1=1 AND name=#{kongFu.name}
    </select>
    <select id="kongFuIdQuery" parameterType="com.ral.manages.entity.app.KongFu" resultType="map">
        SELECT <include refid="kongFuResult"/> FROM dict_kongfu WHERE 1=1 AND kongfu_id=#{kongFu.kongfu_id}
    </select>
    <select id="kongFuQueryName" parameterType="string" resultType="map">
        SELECT kongfu_id,name FROM dict_kongfu WHERE 1=1 AND kongfu_id=#{kongFuId}
    </select>
    <select id="kongFuQueryMarquee" resultType="map">
        SELECT  kongfu_id,name FROM dict_kongfu
    </select>
    <select id="kongFuQueryMarqueeName" parameterType="map" resultType="map">
        SELECT name FROM dict_kongfu WHERE 1=1 AND kongfu_id IN
        <foreach item="item" index="index" collection="kIds" open="(" close=")" separator=",">
            #{item}
        </foreach>
    </select>


    <!--新增-->
    <insert id="kongFuInsert" parameterType="com.ral.manages.entity.app.KongFu">
        INSERT INTO dict_kongfu(kongfu_id,name,info,type,experience_limit,kongfu_attainments,enable,deleteStatus,kongfu_zhaoshi)
        VALUES(#{kongFu.kongfu_id},#{kongFu.name},#{kongFu.info},#{kongFu.type},#{kongFu.experience_limit},
        #{kongFu.kongfu_attainments},#{kongFu.enable},#{kongFu.deleteStatus},#{kongFu.kongfu_zhaoshi})
    </insert>


    <!--修改-->
    <update id="kongFuUpdate" parameterType="com.ral.manages.entity.app.KongFu">
        UPDATE dict_kongfu SET  name=#{kongFu.name},info=#{kongFu.info},type=#{kongFu.type},experience_limit=#{kongFu.experience_limit},
        kongfu_attainments=#{kongFu.kongfu_attainments},enable=#{kongFu.enable},kongfu_zhaoshi=#{kongFu.kongfu_zhaoshi}
        WHERE 1=1 AND kongfu_id=#{kongFu.kongfu_id}
    </update>


    <!--删除-->
    <update id="kongFuDelete" parameterType="com.ral.manages.entity.app.KongFu">
        UPDATE dict_kongfu SET deleteStatus=#{kongFu.deleteStatus} WHERE 1=1 AND  name=#{kongFu.name}
    </update>
    <update id="kongFuBatchDelete" parameterType="map">
        UPDATE dict_kongfu SET deleteStatus=#{deleteStatus} WHERE 1=1 AND name=#{name}
    </update>
</mapper>