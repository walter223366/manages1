<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.ral.manages.mapper.app.IArticleMapper">

    <sql id="articleResult">
        article_id,img,name,info,deleteStatus
    </sql>

    <sql id="conditionalCheck">
        <if test="name != null and name != ''">
            AND name like '%${name}%'
        </if>
    </sql>


    <!--查询-->
    <select id="articlePagingQuery" parameterType="map" resultType="map">
        SELECT <include refid="articleResult"/> FROM dict_article WHERE 1=1 <include refid="conditionalCheck"/>  AND (deleteStatus IS NULL OR deleteStatus=0)
    </select>
    <select id="articleIsExist" parameterType="map" resultType="int">
        SELECT COUNT(1) FROM dict_article WHERE 1=1 AND name=#{name}
    </select>
    <select id="articleEditQuery" parameterType="map" resultType="map">
        SELECT <include refid="articleResult"/> FROM dict_article WHERE 1=1 AND name=#{name}
    </select>
    <select id="articleIdQuery" parameterType="map" resultType="map">
        SELECT <include refid="articleResult"/> FROM dict_article WHERE 1=1 AND article_id=#{article_id}
    </select>


    <!--新增-->
    <insert id="articleInsert" parameterType="map">
        INSERT INTO dict_article(article_id,img,name,info,deleteStatus)VALUES (#{article_id},#{img},#{name},#{info},#{deleteStatus})
    </insert>


    <!--修改-->
    <update id="articleUpdate" parameterType="map">
        UPDATE dict_article SET img=#{img},name=#{name},info=#{info} WHERE 1=1 AND article_id=#{article_id}
    </update>


    <!--删除-->
    <update id="articleDelete" parameterType="map">
        UPDATE dict_article SET deleteStatus=#{deleteStatus} WHERE 1=1 AND name=#{name}
    </update>

</mapper>